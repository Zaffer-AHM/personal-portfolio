---
import MenuLines from "../components/toplogyLines/menuLines.astro";
---

<style>
  .menu-button {
    position: fixed;
    top: 20px;
    right: 30px;
    z-index: 110;
    background: white;
    color: rgb(0, 0, 0);
    font-weight: bold;
    font-size: 1.5rem;
    border: none;
    padding: 10px 15px;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
  }

  .menu-button:hover {
    background: #b6433c;
    color: white;
    transform: scale(1.1);
    transition: all 0.3s ease;
  }

  .overlay {
    position: fixed;
    top: -100%;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgb(0, 0, 0);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    transition: top 0.6s ease-in-out;
    opacity: 1s ease;
    z-index: 100;
  }

  .overlay.show {
    top: 0;
    opacity: 1;
  }

  /* Top-left X button */
  .overlay-close {
    position: fixed;
    top: 20px;
    left: 30px;
    background: none;
    border: none;
    color: black;
    font-size: 2.5rem;
    font-weight: bold;
    cursor: pointer;
    z-index: 110;
    transition: all 0.3s ease-in-out;
  }
  .overlay-close:hover {
    color: red;
    transition: all 0.3s ease;
  }

  .menu-link {
    all: unset;
    cursor: pointer;

    color: white;
    font-size: 8rem;
    font-family: Impact, sans-serif;
    margin: 20px 0;
    transition: color 0.3s;
  }

  .menu-link:hover {
    color: #b6433c;
  }
</style>

<button class="menu-button" id="menuBtn">☰</button>

<div class="overlay" id="overlay">
  <!-- Close button at top-left -->
  <button class="overlay-close" id="overlayClose">«</button>

  <button class="menu-link" data-target="about">ABOUT</button>
  <button class="menu-link" data-target="projects">PROJECTS</button>
  <!-- <button class="menu-link" data-target="artwork">ARTWORK</button> -->
  <button class="menu-link" data-target="contact">CONTACT</button>
  <MenuLines />
</div>

<script type="module">
  const overlay = document.getElementById("overlay");
  const btn = document.getElementById("menuBtn");
  const overlayClose = document.getElementById("overlayClose");
  const sections = document.querySelectorAll(".content-section"); // index.astro sections
  const menuLinks = document.querySelectorAll(".menu-link");

  function toggleOverlay() {
    overlay.classList.toggle("show");

    if (overlay.classList.contains("show")) {
      window.startMenuLines?.();
    } else {
      window.stopMenuLines?.();
    }
  }

  function closeAll() {
    overlay.classList.remove("show");
    window.stopMenuLines?.();

    // Hide all content sections
    sections.forEach((sec) => sec.classList.remove("show"));
  }

  btn.addEventListener("click", toggleOverlay);
  overlayClose.addEventListener("click", closeAll);

  menuLinks.forEach((link) => {
    link.addEventListener("click", () => {
      overlay.classList.remove("show");
      window.stopMenuLines?.();
    });
  });
</script>
