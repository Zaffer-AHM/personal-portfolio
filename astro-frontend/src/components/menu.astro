---
import MenuLines from "./menuLines.astro";
---

<style>
  .menu-button {
    position: fixed;
    top: 20px;
    right: 30px;
    z-index: 50;
    background: white;
    color: rgb(0, 0, 0);
    font-weight: bold;
    font-size: 1.5rem;
    border: none;
    padding: 10px 15px;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
  }

  .menu-button:hover {
    background: #b6433c;
    color: white;
    transform: scale(1.1);
    transition: all 0.3s ease;
  }

  .overlay {
    position: fixed;
    top: -100%;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgb(0, 0, 0);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    transition: top 0.6s ease-in-out;
    z-index: 40;
  }

  .overlay.show {
    top: 0;
  }

  .overlay a {
    color: white;
    font-size: 8rem;
    font-family: Impact;
    margin: 20px 0;
    text-decoration: none;
    transition: color 0.3s;
  }

  .overlay a:hover {
    color: #b6433c;
  }
</style>
<button class="menu-button" id="menuBtn">â˜°</button>

<div class="overlay" id="overlay">
  <a href="#about">ABOUT</a>
  <a href="#projects">PROJECTS</a>
  <a href="#artwork">ARTWORK</a>
  <a href="#contact">CONTACT</a>
  <MenuLines />
</div>

<script type="module">
  const overlay = document.getElementById("overlay");
  const btn = document.getElementById("menuBtn");

  btn.addEventListener("click", () => {
    overlay.classList.toggle("show");

    if (overlay.classList.contains("show")) {
      window.startMenuLines?.(); // start animation
    } else {
      window.stopMenuLines?.(); // stop animation
    }
  });
</script>

